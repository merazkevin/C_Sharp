@model User

<div class="d-flex text-center justify-content-around">
    <form asp-controller="Home" asp-action="CreateUser" method="post">
    <h3>Register</h3><hr><br>
    <div class="mb-3 form-group">
        @* FirstName *@
        <label asp-for="FirstName">FirstName</label>
        <input asp-for="FirstName" placeholder="FirstName" class="form-control"><br>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group" class="m-4">
    @* LastName *@
    <label asp-for="LastName" class="form-label">LastName</label>
    <input asp-for="LastName" placeholder="LastName" class="form-control"><br>
    <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        @* Email *@
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" placeholder="Email" class="form-control"><br>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        @* Password *@
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" placeholder="Password" class="form-control"><br>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group" >
        @* Confirm Password *@
        <label asp-for="PasswordConfirm"class="form-label">Confirm Password</label>
        <input asp-for="PasswordConfirm" placeholder="Confirm Password" class="form-control"><br>
        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
    </div>
    <input type="submit" value="Register" class="btn btn-primary" class="form-control">
    </form>
    <div class="flex-1 m-3">
        @await Html.PartialAsync("_Login")
    </div>
</div>
