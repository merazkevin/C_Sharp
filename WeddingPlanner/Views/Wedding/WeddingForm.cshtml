@model Wedding
<div>
    <br>
    <div class="d-flex justify-content-around">
        <h3>Welcome @ViewBag.Name !</h3>
        @await Html.PartialAsync("_navbar")
    </div><br>
    <center >
        <h3>Plan A Wedding</h3>
        <form asp-action="CreateWedding" asp-controller="Wedding" method="post">
            <div class="mb-3">
                @* WedderOne *@
                <label asp-for="WedderOne"></label>
                <input asp-for="WedderOne" class="form-control"><br><br>
            <p><span asp-validation-for="WedderOne" class="text-danger"></span></p>
            </div>
            <div class="mb-3">
                @* WedderTwo *@
                <label asp-for="WedderTwo"></label>
                <input asp-for="WedderTwo" class="form-control"><br><br>
            <p><span asp-validation-for="WedderTwo" class="text-danger"></span></p>
            </div>
            <div class="mb-3">
                @* Date *@
                <label asp-for="Date"></label>
                <input asp-for="Date" type="date" class="form-control"><br><br>
            <p><span asp-validation-for="Date" class="text-danger"></span></p>
            </div>
            <div class="mb-3">
                @* Address *@
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control"><br><br>
                <input type="hidden"  asp-for="UserId" value=@Context.Session.GetInt32("UserId")>
            <p><span asp-validation-for="Address" class="text-danger"></span></p>
            </div>
            <button>Create</button>
        </form>
    </center>
</div>